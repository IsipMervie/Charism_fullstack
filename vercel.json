{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/vercel-server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/vercel-server.js"
    },
    {
      "src": "/verify-email/(.*)",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/reset-password/(.*)",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/events/register/(.*)",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/events/(.*)",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}