{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/vercel-server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/files/(.*)",
      "dest": "backend/vercel-server.js"
    },
    {
      "src": "/api/uploads/(.*)",
      "dest": "backend/vercel-server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/vercel-server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "functions": {
    "backend/vercel-server.js": {
      "maxDuration": 30
    }
  }
}